---
import { useTranslations } from "@/i18n";
import config from "@/config/config";

const t = useTranslations();
const { header } = config.navigation;
const { logo, siteTitle } = header;
---

<a href="/" class="flex items-center space-x-3">
    {
        logo.visible && (
            <img
                src={logo.src}
                alt={logo.alt}
                class:list={[`h-${logo.height}`, `w-${logo.width}`]}
            />
        )
    }
    {
        siteTitle.visible && (
            <span
                class:list={[
                    "transition-colors",
                    "duration-150",
                    "ease-in-out",

                    siteTitle.style.fontSize,
                    siteTitle.style.fontWeight,
                    siteTitle.style.textColor,
                    siteTitle.style.hoverColor,
                ]}
            >
                {t("siteMetadata.title")}
            </span>
        )
    }
</a>
