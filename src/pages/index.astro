---
import { useTranslations } from "@/i18n";
import BaseLayout from "@/layouts/BaseLayout.astro";

const t = useTranslations();

const metaProps = {
	siteName: t("siteMetadata.title"),
	pageTitle: t("pages.home.title"),
	pageDescription: t("pages.home.description"),
	pageUrl: t("siteMetadata.url"),
};
---

<BaseLayout {...metaProps}>
	<div class="relative overflow-hidden bg-secondary-200">
		<div class="mx-auto max-w-7xl">
			<div
				class="relative z-10 pb-8 bg-secondary-200 sm:pb-16 md:pb-20 lg:max-w-2xl lg:w-full lg:pb-28 xl:pb-32"
			>
				<svg
					class="absolute inset-y-0 right-0 hidden w-48 h-full transform translate-x-1/2 text-gray-50 lg:block"
					fill="currentColor"
					viewBox="0 0 100 100"
					preserveAspectRatio="none"
					aria-hidden="true"
				>
					<polygon points="50,0 100,0 50,100 0,100"></polygon>
				</svg>

				<main
					class="px-4 mx-auto mt-10 max-w-7xl sm:mt-12 sm:px-6 md:mt-16 lg:mt-20 lg:px-8 xl:mt-28"
				>
					<div class="sm:text-center lg:text-left">
						<h1
							class="text-4xl font-extrabold tracking-tight sm:text-5xl md:text-6xl"
						>
							<span class="block xl:inline">Astro</span>
							<span class="block text-primary-600 xl:inline"
								>Starter</span
							>
						</h1>
						<p
							class="mt-3 text-base text-gray-500 sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-5 md:text-xl lg:mx-0"
						>
							{metaProps.pageDescription}
						</p>
						<div
							class="mt-5 sm:mt-8 sm:flex sm:justify-center lg:justify-start"
						>
							<div class="rounded-md shadow">
								<a
									href="/about"
									class="flex items-center justify-center w-full px-8 py-3 text-base font-medium border border-transparent rounded-md text-gray-50 bg-primary-600 hover:bg-primary-700 md:py-4 md:text-lg md:px-10"
								>
									Learn About Us
								</a>
							</div>
							<div class="mt-3 sm:mt-0 sm:ml-3">
								<a
									href="/blog"
									class="flex items-center justify-center w-full px-8 py-3 text-base font-medium border border-transparent rounded-md text-primary-700 bg-primary-100 hover:bg-primary-200 md:py-4 md:text-lg md:px-10"
								>
									Read Our Blog
								</a>
							</div>
						</div>
					</div>
				</main>
			</div>
		</div>
		<div class="lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2">
			<img
				class="object-cover w-full h-56 sm:h-72 md:h-96 lg:w-full lg:h-full"
				src="/images/home/hero.avif"
				alt="Hero Image"
			/>
		</div>
	</div>
</BaseLayout>
