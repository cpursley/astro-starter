---
import { useTranslations } from "@/i18n";
import { getCurrentThemeAttributes } from "@/scripts/themeConfig";

const t = useTranslations();
const { header } = getCurrentThemeAttributes();
const { logo, siteTitle } = header;
---

<a href="/" class="flex items-center space-x-3">
    {
        logo.visible && (
            <img
                src={logo.src}
                alt={logo.alt}
                class:list={[`h-${logo.height}`, `w-${logo.width}`]}
            />
        )
    }
    {
        siteTitle.visible && (
            <span class="text-2xl font-bold transition duration-150 ease-in-out text-gray-50 hover:text-primary-100">
                {t("siteMetadata.title")}
            </span>
        )
    }
</a>
