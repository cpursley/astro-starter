---
import { useTranslations } from "@/i18n";
import BaseLayout from "@/layouts/BaseLayout.astro";
import { config } from "../config/config";
const formUrl = config.form.url;
const formKey = config.form.key;

const t = useTranslations();

const metaProps = {
    siteName: t("siteMetadata.title"),
    pageTitle: t("pages.contact.title"),
    pageDescription: t("pages.contact.description"),
    pageUrl: t("siteMetadata.url") + "/contact",
};
---

<BaseLayout {...metaProps}>
    <div class="overflow-hidden bg-gray-50">
        <div class="px-4 py-8 mx-auto max-w-7xl sm:px-6 lg:py-12 lg:px-8">
            <div class="lg:text-center">
                <h2
                    class="text-base font-semibold tracking-wide uppercase text-primary-600"
                >
                    {t("pages.contact.subtitle")}
                </h2>
                <p
                    class="mt-2 text-4xl font-extrabold leading-8 tracking-tight text-gray-900 sm:text-5xl"
                >
                    {t("pages.contact.title")}
                </p>
                <p class="mt-4 text-xl text-gray-500">
                    {t("pages.contact.description")}
                </p>
            </div>
            <div
                class="max-w-2xl mx-auto mt-10 overflow-hidden rounded-lg shadow-md bg-gray-50"
                x-data="{ 
                    formSubmitted: false,
                    isSubmitting: false,
                    submitForm() {
                        this.isSubmitting = true;
                        fetch(formUrl, {
                            method: 'POST',
                            body: new FormData(this.$refs.form),
                            headers: {
                                'Accept': 'application/json'
                            }
                        })
                        .then(response => response.json())
                        .then(data => {
                            this.isSubmitting = false;
                            if (data.success) {
                                this.formSubmitted = true;
                                this.$refs.form.reset();
                            } else {
                                alert('An error occurred. Please try again.');
                            }
                        })
                        .catch(error => {
                            this.isSubmitting = false;
                            console.error('Error:', error);
                            alert('An error occurred. Please try again.');
                        });
                    }
                 }"
            >
                <form
                    x-show="!formSubmitted"
                    x-ref="form"
                    @submit.prevent="submitForm"
                    class="grid grid-cols-1 p-6 gap-y-6 sm:grid-cols-2 sm:gap-x-8"
                >
                    <input type="hidden" name="access_key" value={formKey} />
                    <div>
                        <label
                            for="firstName"
                            class="block text-sm font-medium text-gray-700"
                        >
                            First name<span class="ml-1 text-red-500">*</span>
                        </label>
                        <input
                            type="text"
                            id="firstName"
                            name="firstName"
                            required
                            class="block w-full px-3 py-2 mt-1 border border-gray-300 rounded-md shadow-sm bg-gray-50 focus:outline-none focus:ring-primary-500 focus:border-primary-500 sm:text-sm"
                            placeholder="First name (required)"
                        />
                    </div>
                    <div>
                        <label
                            for="lastName"
                            class="block text-sm font-medium text-gray-700"
                        >
                            Last name
                        </label>
                        <input
                            type="text"
                            id="lastName"
                            name="lastName"
                            class="block w-full px-3 py-2 mt-1 border border-gray-300 rounded-md shadow-sm bg-gray-50 focus:outline-none focus:ring-primary-500 focus:border-primary-500 sm:text-sm"
                            placeholder="Last name"
                        />
                    </div>
                    <div class="sm:col-span-2">
                        <label
                            for="email"
                            class="block text-sm font-medium text-gray-700"
                        >
                            Email<span class="ml-1 text-red-500">*</span>
                        </label>
                        <input
                            type="email"
                            id="email"
                            name="email"
                            required
                            class="block w-full px-3 py-2 mt-1 border border-gray-300 rounded-md shadow-sm bg-gray-50 focus:outline-none focus:ring-primary-500 focus:border-primary-500 sm:text-sm"
                            placeholder="Your email address (required)"
                        />
                    </div>
                    <div class="sm:col-span-2">
                        <label
                            for="phone"
                            class="block text-sm font-medium text-gray-700"
                        >
                            Phone number
                        </label>
                        <input
                            type="tel"
                            id="phone"
                            name="phone"
                            class="block w-full px-3 py-2 mt-1 border border-gray-300 rounded-md shadow-sm bg-gray-50 focus:outline-none focus:ring-primary-500 focus:border-primary-500 sm:text-sm"
                            placeholder="Your phone number"
                        />
                    </div>
                    <div class="sm:col-span-2">
                        <label
                            for="message"
                            class="block text-sm font-medium text-gray-700"
                        >
                            Message<span class="ml-1 text-red-500">*</span>
                        </label>
                        <textarea
                            id="message"
                            name="message"
                            rows="4"
                            required
                            class="block w-full px-3 py-2 mt-1 border border-gray-300 rounded-md shadow-sm bg-gray-50 focus:outline-none focus:ring-primary-500 focus:border-primary-500 sm:text-sm"
                            placeholder="Your message"></textarea>
                    </div>
                    <input
                        type="checkbox"
                        name="botcheck"
                        class="hidden"
                        style="display: none;"
                    />
                    <div class="flex justify-center sm:col-span-2">
                        <button
                            type="submit"
                            :disabled="isSubmitting"
                            class="w-full px-8 py-3 text-base font-medium uppercase transition-all duration-150 ease-in-out border border-transparent rounded-md shadow-sm bg-primary-600 sm:w-2/3 text-gray-50 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500"
                            :class="{ 'opacity-75 cursor-not-allowed': isSubmitting }"
                        >
                            <span
                                x-text="isSubmitting ? 'Submitting...' : 'Submit'"
                            ></span>
                        </button>
                    </div>
                </form>
                <div x-show="formSubmitted" class="p-6 text-center">
                    <h3 class="mb-4 text-2xl font-bold text-green-600">
                        Message Successfully Sent!
                    </h3>
                    <p class="text-gray-600">
                        Thank you for contacting us. We'll get back to you soon.
                    </p>
                </div>
            </div>
        </div>
    </div>
</BaseLayout>

<script is:inline define:vars={{ formUrl }}>
    window.formUrl = formUrl;
</script>
