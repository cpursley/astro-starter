---
import { getThemeConfig, getTheme } from "../scripts/themeConfig";

const themeConfig = getThemeConfig(getTheme());
---

<style is:global define:vars={{ ...themeConfig.colors, ...themeConfig.fonts }}>
    :root {
        /* Colors */
        --color-primary: var(--primary);
        --color-secondary: var(--secondary);
        --color-accent: var(--accent);
        --color-background: var(--background);
        --color-text: var(--text);
        --color-muted: var(--muted);
        --color-header-from: var(--headerFrom);
        --color-header-to: var(--headerTo);
        --color-header-solid: var(--headerSolid);
        --color-footer: var(--footer);
        --color-hero-bg: var(--heroBackground);
        --color-hero-text: var(--heroText);
        --color-hero-accent: var(--heroAccent);
        --color-btn-primary: var(--buttonPrimary);
        --color-btn-primary-hover: var(--buttonPrimaryHover);
        --color-btn-secondary: var(--buttonSecondary);
        --color-btn-secondary-text: var(--buttonSecondaryText);
        --color-btn-secondary-hover: var(--buttonSecondaryHover);

        /* Fonts */
        --font-sans: var(--sans);
        --font-serif: var(--serif);
        --font-heading: var(--heading);
    }
</style>
