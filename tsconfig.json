{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ]
    },
    "strictNullChecks": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "astro/client"
    ],
    "moduleResolution": "node"
  }
}