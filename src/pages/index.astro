---
import { useTranslations } from "../i18n";
import BaseLayout from "../layouts/BaseLayout.astro";

const t = useTranslations();

const metaProps = {
	siteName: t("siteMetadata.title"),
	pageTitle: t("pages.home.title"),
	pageDescription: t("pages.home.description"),
	pageUrl: t("siteMetadata.url"),
};
---

<BaseLayout {...metaProps}>
	<div class="container mx-auto px-4 py-16">
		<div class="max-w-3xl mx-auto text-center">
			<h1 class="text-4xl md:text-5xl font-bold text-blue-600 mb-6">
				{metaProps.pageTitle}
			</h1>
			<p class="text-xl md:text-2xl text-gray-700 mb-8">
				{metaProps.pageDescription}
			</p>
			<div class="mt-8">
				<a
					href="/about"
					class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-6 rounded-full transition duration-300 inline-block"
				>
					Learn More
				</a>
			</div>
		</div>
	</div>
</BaseLayout>
