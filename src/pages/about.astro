---
import { useTranslations } from "@/i18n";
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Image } from "astro:assets";

const t = useTranslations();

const metaProps = {
    siteName: t("siteMetadata.title"),
    pageTitle: t("pages.about.title"),
    pageDescription: t("pages.about.description"),
    pageUrl: t("siteMetadata.url") + "/about",
};

const teamMembers = [
    {
        name: "John Doe",
        role: "Founder & CEO",
        image: "/images/about/john.avif",
    },
    {
        name: "Sarah Lee",
        role: "CTO",
        image: "/images/about/sarah.avif",
    },
    {
        name: "Mike Johnson",
        role: "Lead Developer",
        image: "/images/about/mike.avif",
    },
    {
        name: "Jane Smith",
        role: "Designer",
        image: "/images/about/jane.avif",
    },
];
---

<BaseLayout {...metaProps}>
    <div class="relative overflow-hidden bg-gray-50">
        <div class="px-4 py-8 mx-auto max-w-7xl sm:px-6 lg:py-12 lg:px-8">
            <div class="lg:text-center">
                <h2
                    class="text-base font-semibold tracking-wide uppercase text-primary-600"
                >
                    {t("pages.about.subtitle")}
                </h2>
                <p
                    class="mt-2 text-4xl font-extrabold leading-8 tracking-tight text-gray-900 sm:text-5xl"
                >
                    Meet the people behind
                    <span class="block text-primary-600 xl:inline"
                        >{t("siteMetadata.title")}</span
                    >
                </p>
                <p class="max-w-2xl mt-4 text-xl text-gray-500 lg:mx-auto">
                    We're a passionate group of individuals dedicated to
                    building amazing products and delivering exceptional
                    service.
                </p>
            </div>

            <div class="mt-10">
                <ul
                    class="space-y-12 sm:grid sm:grid-cols-2 sm:gap-x-6 sm:gap-y-12 sm:space-y-0 lg:grid-cols-4 lg:gap-x-8"
                >
                    {
                        teamMembers.map((member) => (
                            <li>
                                <div class="space-y-4">
                                    <Image
                                        class="object-cover w-full h-56 rounded-lg shadow-lg"
                                        src={member.image}
                                        alt={member.name}
                                        width={256}
                                        height={256}
                                    />
                                    <div class="space-y-2">
                                        <div class="space-y-1 text-lg font-medium leading-6">
                                            <h3>{member.name}</h3>
                                            <p class="text-primary-600">
                                                {member.role}
                                            </p>
                                        </div>
                                        <ul class="flex space-x-5">
                                            <li>
                                                <a
                                                    href="#"
                                                    class="text-gray-400 hover:text-gray-500"
                                                >
                                                    <span class="sr-only">
                                                        Twitter
                                                    </span>
                                                    <svg
                                                        class="w-5 h-5"
                                                        fill="currentColor"
                                                        viewBox="0 0 20 20"
                                                        aria-hidden="true"
                                                    >
                                                        <path d="M6.29 18.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0020 3.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.073 4.073 0 01.8 7.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 010 16.407a11.616 11.616 0 006.29 1.84" />
                                                    </svg>
                                                </a>
                                            </li>
                                            <li>
                                                <a
                                                    href="#"
                                                    class="text-gray-400 hover:text-gray-500"
                                                >
                                                    <span class="sr-only">
                                                        LinkedIn
                                                    </span>
                                                    <svg
                                                        class="w-5 h-5"
                                                        fill="currentColor"
                                                        viewBox="0 0 20 20"
                                                        aria-hidden="true"
                                                    >
                                                        <path
                                                            fill-rule="evenodd"
                                                            d="M16.338 16.338H13.67V12.16c0-.995-.017-2.277-1.387-2.277-1.39 0-1.601 1.086-1.601 2.207v4.248H8.014v-8.59h2.559v1.174h.037c.356-.675 1.227-1.387 2.526-1.387 2.703 0 3.203 1.778 3.203 4.092v4.711zM5.005 6.575a1.548 1.548 0 11-.003-3.096 1.548 1.548 0 01.003 3.096zm-1.337 9.763H6.34v-8.59H3.667v8.59zM17.668 1H2.328C1.595 1 1 1.581 1 2.298v15.403C1 18.418 1.595 19 2.328 19h15.34c.734 0 1.332-.582 1.332-1.299V2.298C19 1.581 18.402 1 17.668 1z"
                                                            clip-rule="evenodd"
                                                        />
                                                    </svg>
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </li>
                        ))
                    }
                </ul>
            </div>
        </div>
    </div>
</BaseLayout>
